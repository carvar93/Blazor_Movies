
<div>

    <p>
        Titulo:@Pelicula.Titulo
        @if (DateTime.Today.Subtract(Pelicula.FechaLanzamineto).Days == 11)
        {
            <span style="color-rendering:red ">Actual</span>
        }
    </p>
    <p>Fecha:@Pelicula.FechaLanzamineto</p>

    @if(MostrarBotones){
    <div>
            <button @onclick="@(() =>EliminarPelicula.InvokeAsync(Pelicula))">Borrar</button>
    </div>
    }

</div>

@code {
    [Parameter]
    [EditorRequired]
    public Pelicula Pelicula { get; set; } = null;


    [Parameter]
    public bool MostrarBotones { get; set; } = false;

    [Parameter]
    public EventCallback<Pelicula> EliminarPelicula { get; set; }




}
